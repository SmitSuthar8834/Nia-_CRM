# Environment Configuration for Intelligent Meeting Workflow
# Copy this file to .env and update with your actual values

# =============================================================================
# DJANGO CONFIGURATION
# =============================================================================
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=1
DJANGO_SETTINGS_MODULE=intelligent_meeting_workflow.settings
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=intelligent_meeting_workflow
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:postgres@db:5432/intelligent_meeting_workflow

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://redis:6379/0
REDIS_PORT=6379

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# =============================================================================
# WEB SERVER CONFIGURATION
# =============================================================================
WEB_PORT=8000
BUILD_TARGET=development

# =============================================================================
# NGINX CONFIGURATION (Production)
# =============================================================================
NGINX_PORT=80
NGINX_SSL_PORT=443

# =============================================================================
# CRM INTEGRATIONS
# =============================================================================

# Salesforce
SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret
SALESFORCE_USERNAME=your-salesforce-username
SALESFORCE_PASSWORD=your-salesforce-password
SALESFORCE_SECURITY_TOKEN=your-salesforce-security-token

# HubSpot
HUBSPOT_API_KEY=your-hubspot-api-key
HUBSPOT_PORTAL_ID=your-hubspot-portal-id

# Creatio
CREATIO_API_URL=https://your-creatio-instance.com
CREATIO_USERNAME=your-creatio-username
CREATIO_PASSWORD=your-creatio-password

# =============================================================================
# AI SERVICES
# =============================================================================
GEMINI_API_KEY=your-gemini-api-key
OPENAI_API_KEY=your-openai-api-key

# =============================================================================
# VIDEO PLATFORM INTEGRATIONS
# =============================================================================

# Google Meet
GOOGLE_MEET_CLIENT_ID=your-google-meet-client-id
GOOGLE_MEET_CLIENT_SECRET=your-google-meet-client-secret

# Microsoft Teams
TEAMS_CLIENT_ID=your-teams-client-id
TEAMS_CLIENT_SECRET=your-teams-client-secret
TEAMS_TENANT_ID=your-teams-tenant-id

# Zoom
ZOOM_CLIENT_ID=your-zoom-client-id
ZOOM_CLIENT_SECRET=your-zoom-client-secret

# =============================================================================
# N8N WORKFLOW AUTOMATION
# =============================================================================
N8N_PORT=5678
N8N_USER=admin
N8N_PASSWORD=admin
N8N_WEBHOOK_URL=http://localhost:5678

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=1
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
SENTRY_DSN=your-sentry-dsn-url
LOG_LEVEL=INFO

# =============================================================================
# TIMEZONE CONFIGURATION
# =============================================================================
TIMEZONE=UTC

# =============================================================================
# MONITORING (Optional)
# =============================================================================
GRAFANA_PASSWORD=admin

# =============================================================================
# STAGING/PRODUCTION OVERRIDES
# =============================================================================
